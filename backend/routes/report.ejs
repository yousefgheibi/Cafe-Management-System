<html>
    <head>
        <style>
            table{
                font-family: Arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td,th{
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>

    <body style="padding:1rem;">
        <div style="padding:1rem;border:2px solid #333;border-radius: 5px;">
        <h3 style="text-align:center;">Cafe Management System</h3>
        <table>
            <tr>
                <th>Name: <%= name %></th>
                <th>Email: <%= email %></th>
            </tr>
            <tr>
                <th>Contact Number: <%= contactnumber %></th>
                <th>Payment Method: <%= paymentmethod %></th>
            </tr>
        </table>
        <h3>Product Details:</h3>
        <tabel>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(productDetails.lenght > 0) { %>
                <% productDetails.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.price %></td>
                        <td><%= product.total %></td>
                    </tr>
                <% }); %>
            <% }; %>
        </tabel>
        <h3>Total : <%= totalAmount %></h3>
        <h3>Thank you for visiting. Please visit again!!</h3>
    </div>
    </body>
</html>